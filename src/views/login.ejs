<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
<div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
    <h1 class="text-center">Faça login ou crie uma conta</h1>
    <p class="text-center lead">Faça login ou crie sua conta aqui</p>

    <%- include('./includes/messages') %> 

    <div class="row">
        <div class="col-lg">

            <h4>Faça seu cadastro</h4>
            <p>Se ainda não tem uma conta, preencha o formulário abaixo:</p>
            <form action="/login/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="exampleInputEmail1">Endereço de email</label>
                    <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Entre com email">
                    <small class="form-text text-muted">Jamais iremos compartilhar seu email com alguém.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" name="password" class="form-control"  placeholder="Senha">
                </div>
                <button type="submit" class="btn btn-primary my-2">Enviar</button>
            </form>
        </div>

        <div class="col-lg">
            <h4>Faça seu login</h4>
            <p>Se já tem uma conta, basta preencher o formulário abaixo:</p>
            <form action="/login/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="exampleInputEmail1">Endereço de email</label>
                    <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Entre com email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" name="password" class="form-control" placeholder="Senha">
                </div>
                <button type="submit" class="btn btn-primary my-2">Enviar</button>
                </form>
        </div>

    </div>
    </div>

    <div class="col-lg-2"></div>
</div>
</div>

<%- include('./includes/footer') %>